# Application
SECRET_KEY=a-secret-key-min-32-chars-change-in-production
DEBUG=true
ENVIRONMENT=development

# Database (async)
DATABASE_URL=postgresql+asyncpg://retrievai:retrievai_dev@postgres:5432/retrievai

# Redis (for ARQ)
REDIS_URL=redis://redis:6379/0

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# OpenAI
OPENAI_API_KEY=an-openai-api-key

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=/app/data/uploads
TMP_DIR=/app/data/tmp

# Vector Store
VECTORSTORE_COLLECTION_NAME=rag_collection

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
